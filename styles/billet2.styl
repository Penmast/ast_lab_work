main
  margin-top: 8%


h2, li
  background: #f2f1de /* For browsers that do not support gradients */
  background: -webkit-linear-gradient(-90deg, #f2f1de, #fffed4) /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(-90deg, #f2f1de, #fffed4) /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(-90deg, #f2f1de, #fffed4) /* For Firefox 3.6 to 15 */
  background: linear-gradient(-90deg, #f2f1de, #fffed4) /* Standard syntax */
  border: 1px solid transparent
  border-radius: 15px
  opacity: 0.7
  transition: opacity 1s


h2
  padding: 30px
  width: 50%


li
  list-style: none
  padding: 10px
  margin: 5px

  a>img
    height: 300px
    width: 300px


ul
  display: flex
  flex-direction: row
  flex-wrap: wrap


li:hover, h2:hover
  opacity: 1
