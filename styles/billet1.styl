main
  margin-top: 8%
  display: flex
  flex-direction: row
  justify-content: space-between

section, article, form
  background: #f2f1de /* For browsers that do not support gradients */
  background: -webkit-linear-gradient(-90deg, #f2f1de, #fffed4) /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(-90deg, #f2f1de, #fffed4) /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(-90deg, #f2f1de, #fffed4) /* For Firefox 3.6 to 15 */
  background: linear-gradient(-90deg, #f2f1de, #fffed4) /* Standard syntax */
  border: 1px solid transparent
  border-radius: 15px
  opacity: 0.7
  transition: opacity 1s

section:hover, article:hover, form:hover
  opacity: 0.9

article
  width: 50%
  padding: 20px
  display: flex
  margin-right: 2%

  &>img
    width: 461px
    height: 691px


  &>div
    padding-right: 20px
    flex: 1


    &>h2
      margin-bottom: 50px


#flexbox
  width: 50%
  display: flex
  flex-direction: column


#memes
  margin-bottom: 2%
  padding: 10px

  &>div
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between

  img
    height: 270px
    width: 270px


form
  padding: 10px
  margin: 0


  &>div
    display: flex
    justify-content:space-between


    &>a>img
      height: 350px
      width: 350px


#imgthink
  height: 20%
  width: 90%
  margin-bottom: 20px


form>div>div
  display: flex
  flex-direction: column
  margin: auto
  align-items: center
